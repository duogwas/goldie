<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgSubCategoryPic"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        android:src="@color/shimmer_bg_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="20dp" />

    <TextView
        android:id="@+id/tvSubCategoryName"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/shimmer_bg_color"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSubCategoryPic" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgSubCategoryPic1"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_marginStart="15dp"
        android:scaleType="centerCrop"
        android:src="@color/shimmer_bg_color"
        app:layout_constraintStart_toEndOf="@+id/imgSubCategoryPic"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="20dp" />

    <TextView
        android:id="@+id/tvSubCategoryName1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/shimmer_bg_color"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="@id/imgSubCategoryPic1"
        app:layout_constraintTop_toBottomOf="@+id/imgSubCategoryPic1" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgSubCategoryPic2"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_marginStart="15dp"
        android:scaleType="centerCrop"
        android:src="@color/shimmer_bg_color"
        app:layout_constraintStart_toEndOf="@+id/imgSubCategoryPic1"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="20dp" />

    <TextView
        android:id="@+id/tvSubCategoryName2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/shimmer_bg_color"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="@id/imgSubCategoryPic2"
        app:layout_constraintTop_toBottomOf="@+id/imgSubCategoryPic2" />
</androidx.constraintlayout.widget.ConstraintLayout>

